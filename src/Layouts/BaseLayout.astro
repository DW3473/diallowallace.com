---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <title>{title}</title>
    <style>
      .image-row {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 40px;
      }
      .image-row img {
        max-width: 250px;
        height: auto;
        border-radius: 8px;
      }
      h1 {
        text-align: center;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>

